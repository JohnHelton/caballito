          <div id ="animate"></div>
        </div>
        
        <script>
        function myMove() {
          var elem = document.getElementById("animate");   
          var pos = 0;
          var id = setInterval(frame, 8);

          function frame() {
            if (pos == 1000) {
              clearInterval(id);
            } else {
              pos++; 
              //elem.style.top = pos + "px"; 
              elem.style.left = pos + "px"; 
            }
          }
        }
        </script>
