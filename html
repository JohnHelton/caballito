            function myMove1() {
              var elem = document.getElementById("animate1");   
              var pos = 0;
              var id = setInterval(frame, 8);
    
              function frame() {
                if (pos == 1000) {
                  clearInterval(id);
                } else {
                  pos++; 
                  //elem.style.top = pos + "px"; 
                  elem.style.left = pos + "px"; 
                }
              }
            }
